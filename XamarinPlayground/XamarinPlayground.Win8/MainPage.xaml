    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
		<TextBox x:Name="TextBox1" HorizontalAlignment="Left" Margin="193,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
		<TextBox x:Name="TextBox2" HorizontalAlignment="Left" Margin="386,239,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
